<?xml version="1.0" encoding="utf-8"?>
<com.cursoandroid.youtube.ui.SingleViewTouchableMotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/audioMotionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/player_motion_scene"
        tools:context=".fragment.PlayerFragment">
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="0dp" android:layout_height="120dp"
                                                         android:id="@+id/playerBackground"
                                                         android:layout_marginStart="10dp"
                                                         android:layout_marginEnd="10dp"
                                                         android:layout_marginBottom="20dp"
                                                         android:background="@drawable/play_pause_background"
                                                         app:layout_constraintBottom_toBottomOf="parent"
                                                         app:layout_constraintEnd_toEndOf="parent"
                                                         app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@id/titleVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/titleChannel"
            app:layout_constraintEnd_toStartOf="@+id/prevImageView"
            app:layout_constraintStart_toEndOf="@+id/youtubeFragment"
            app:layout_constraintTop_toTopOf="@+id/youtubeFragment"
            tools:text="Title"/>

    <TextView
            android:id="@id/titleChannel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:elevation="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/youtubeFragment"
            app:layout_constraintEnd_toStartOf="@+id/prevImageView"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/titleVideo"
            app:layout_constraintTop_toBottomOf="@+id/titleVideo"
            tools:text="Channel"/>
    <ImageView
            android:id="@+id/prevImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:src="@android:drawable/ic_media_previous"
            app:layout_constraintBottom_toBottomOf="@+id/playPauseLayout"
            app:layout_constraintEnd_toStartOf="@id/playPauseLayout"
            app:layout_constraintTop_toTopOf="@+id/playPauseLayout"/>

    <FrameLayout
            android:id="@+id/playPauseLayout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/play_pause_background"
            android:elevation="10dp"
            android:outlineProvider="none"
            app:layout_constraintBottom_toBottomOf="@+id/playerBackground"
            app:layout_constraintEnd_toStartOf="@+id/nextImageView"
            app:layout_constraintTop_toTopOf="@+id/playerBackground">

        <ImageView
                android:id="@+id/play_pause_image_view"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_media_pause"/>
    </FrameLayout>

    <ImageView
            android:id="@+id/nextImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:src="@android:drawable/ic_media_next"
            app:layout_constraintBottom_toBottomOf="@+id/playPauseLayout"
            app:layout_constraintEnd_toEndOf="@id/playerBackground"
            app:layout_constraintTop_toTopOf="@+id/playPauseLayout"/>
    <fragment
            android:name="com.google.android.youtube.player.YouTubePlayerSupportFragmentX"
            android:id="@+id/youtubeFragment"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@id/playerBackground"
            app:layout_constraintStart_toStartOf="@id/playerBackground"
            app:layout_constraintTop_toTopOf="@id/playerBackground"/>
</com.cursoandroid.youtube.ui.SingleViewTouchableMotionLayout>